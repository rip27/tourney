<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
            app:title="Join"
            android:id="@+id/toolbarJoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <View android:layout_width="match_parent"
          android:layout_below="@id/toolbarJoin"
          android:background="#D37E30"
          android:layout_height="2dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="20dp"
            android:layout_below="@+id/toolbarJoin"
            android:id="@+id/rcv_join"
            android:layout_above="@+id/warning"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <TextView android:layout_width="match_parent"
              android:id="@+id/warning"
              android:textAlignment="center"
              android:layout_alignParentBottom="true"
              android:background="#D37E30"
              android:textColor="@android:color/white"
              android:padding="5dp"
              android:layout_margin="5dp"
              android:text="Tunjukan Bukti Ini Pada Panitia Sebelum Tournament Berlangsung"
              android:textAppearance="@style/TextAppearance.AppCompat.Large"
              android:layout_height="wrap_content"/>
</RelativeLayout>