<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
            app:title="Setting"
            android:id="@+id/toolbarSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <View android:layout_width="match_parent"
          android:layout_below="@+id/toolbarSetting"
          android:layout_height="2dp"
          android:background="@android:color/black"/>

    <TextView android:layout_width="match_parent"
              android:layout_below="@+id/toolbarSetting"
              android:text="Edit Profile"
              android:id="@+id/editProfileonSetting"
              android:layout_margin="20dp"
              android:textColor="@android:color/white"
              android:padding="15dp"
              android:textAppearance="@style/TextAppearance.AppCompat.Large"
              android:background="@drawable/rounded_logout"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="match_parent"
              android:layout_below="@+id/editProfileonSetting"
              android:text="Change Password"
              android:id="@+id/changePassonSetting"
              android:layout_marginHorizontal="20dp"
              android:textColor="@android:color/white"
              android:padding="15dp"
              android:textAppearance="@style/TextAppearance.AppCompat.Large"
              android:background="@drawable/rounded_logout"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="match_parent"
              android:text="Logout"
              android:id="@+id/logoutonSetting"
              android:layout_margin="20dp"
              android:padding="10dp"
              android:layout_alignParentBottom="true"
              android:textColor="@android:color/white"
              android:textAlignment="center"
              android:textAppearance="@style/TextAppearance.AppCompat.Large"
              android:background="#a00"
              android:layout_height="wrap_content"/>

</RelativeLayout>