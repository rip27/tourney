<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#D37E30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <EditText
            android:id="@+id/editTextNameRegister"
            android:textColor="@android:color/black"
            android:textColorHint="#777"
            android:paddingHorizontal="20dp"
            android:hint="Name"
            android:layout_margin="20dp"
            android:background="@drawable/shape_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <EditText
                android:id="@+id/editTextPhoneRegister"
                android:layout_below="@+id/editTextNameRegister"
                android:textColor="@android:color/black"
                android:textColorHint="#777"
                android:paddingHorizontal="20dp"
                android:hint="Phone"
                android:inputType="phone"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/shape_edit_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
    <Spinner
            android:paddingHorizontal="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/editTextPhoneRegister"
            android:background="@drawable/shape_edit_text"
            android:layout_marginTop="20dp"
            android:entries="@array/gender"
            android:id="@+id/sp_gender"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <EditText
                android:inputType="textEmailAddress"
                android:layout_below="@+id/sp_gender"
                android:id="@+id/editTextEmailRegister"
                android:textColor="@android:color/black"
                android:textColorHint="#777"
                android:paddingHorizontal="20dp"
                android:hint="@string/email"
                android:layout_margin="20dp"
                android:background="@drawable/shape_edit_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        <EditText
                android:inputType="textPassword"
                android:id="@+id/editTextPasswordRegister"
                android:layout_below="@+id/editTextEmailRegister"
                android:textColor="@android:color/black"
                android:textColorHint="#777"
                android:paddingHorizontal="20dp"
                android:hint="@string/password"
                android:layout_marginBottom="0dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/shape_edit_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
    <CheckBox
            android:text="Show / Hide"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/editTextPasswordRegister"
            android:id="@+id/hideShowPassRegister"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"/>

</RelativeLayout>