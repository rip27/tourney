<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".page.IkutTour">
    <RelativeLayout
            android:id="@+id/tulbarikut"
            android:background="#D37E30"
            app:titleTextColor="@android:color/white"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView android:layout_width="30dp"
                   android:id="@+id/backa"
                   android:layout_margin="15dp"
                   android:layout_centerVertical="true"
                   android:layout_alignParentStart="true"
                   android:src="@drawable/ic_arrow_back"
                   android:layout_height="30dp"/>
        <TextView android:layout_width="match_parent"
                  android:text="Ikut Tournament"
                  android:layout_toEndOf="@+id/backa"
                  android:layout_centerVertical="true"
                  android:layout_marginStart="10dp"
                  android:textSize="24sp"
                  android:textAppearance="@style/TextAppearance.AppCompat.Large"
                  android:textColor="@android:color/white"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ScrollView
            android:layout_below="@+id/tulbarikut"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:id="@+id/contentNama"
                          android:layout_marginTop="20dp"
                          android:background="#D37E30"
                          android:layout_marginHorizontal="20dp"
                          android:padding="5dp"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="Atas Nama"
                          android:textColor="@android:color/white"
                          android:layout_height="wrap_content"/>

                <TextView android:layout_width="match_parent"
                          android:layout_marginTop="5dp"
                          android:padding="10dp"
                          android:text="P"
                          android:id="@+id/atasNama"
                          android:textColor="@android:color/black"
                          android:background="@android:color/white"
                          android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_marginTop="20dp"
                          android:background="#D37E30"
                          android:id="@+id/contentTournament"
                          android:layout_marginHorizontal="20dp"
                          android:padding="5dp"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="Nama Tournament"
                          android:textColor="@android:color/white"
                          android:layout_height="wrap_content"/>

                <TextView android:layout_width="match_parent"
                          android:layout_marginTop="5dp"
                          android:padding="10dp"
                          android:text="Ci"
                          android:id="@+id/namaTournament"
                          android:textColor="@android:color/black"
                          android:background="@android:color/white"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_marginTop="20dp"
                          android:background="#D37E30"
                          android:id="@+id/contentPenyelenggara"
                          android:layout_marginHorizontal="20dp"
                          android:padding="5dp"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="Penyelenggara Tournament"
                          android:textColor="@android:color/white"
                          android:layout_height="wrap_content"/>

                <TextView android:layout_width="match_parent"
                          android:layout_marginTop="5dp"
                          android:padding="10dp"
                          android:text="Ci"
                          android:id="@+id/penyelenggaraTournament"
                          android:textColor="@android:color/black"
                          android:background="@android:color/white"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_marginTop="20dp"
                          android:background="#D37E30"
                          android:id="@+id/contentPrice"
                          android:layout_marginHorizontal="20dp"
                          android:padding="5dp"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="Biaya Pendaftaran ( Rupiah )"
                          android:textColor="@android:color/white"
                          android:layout_height="wrap_content"/>

                <TextView android:layout_width="match_parent"
                          android:layout_marginTop="5dp"
                          android:padding="10dp"
                          android:text="210920901920192019201920910291029"
                          android:id="@+id/priceTournament"
                          android:textColor="@android:color/black"
                          android:background="@android:color/white"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="200dp"
                          android:orientation="vertical"
                          android:layout_marginTop="20dp"
                          android:background="#D37E30"
                          android:layout_gravity="center"
                          android:id="@+id/contentbukti"
                          android:layout_marginHorizontal="20dp"
                          android:padding="5dp"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="match_parent"
                          android:textAlignment="center"
                          android:text="Bukti Transfer"
                          android:textColor="@android:color/white"
                          android:layout_height="wrap_content"/>

                <ImageView
                        android:layout_gravity="center"
                        android:layout_width="175dp"
                        android:padding="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/buktiTransfer"
                        android:src="@drawable/upbrosur"
                        android:textColor="@android:color/black"
                        android:background="@android:color/white"
                        android:layout_height="175dp"/>
            </LinearLayout>
            <ProgressBar
                    android:progressBackgroundTint="@android:color/black"
                    android:id="@+id/progressIkut"
                    android:visibility="gone"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <Button android:layout_width="match_parent"
                    android:layout_margin="20dp"
                    android:text="IKUT"
                    android:textSize="16sp"
                    android:id="@+id/bt_ikutTour"
                    android:background="#fcd989"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>