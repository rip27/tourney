<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_margin="10dp"
              android:padding="10dp"
              android:background="@drawable/round"
              android:id="@+id/lljm"
              android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:padding="5dp"
                  android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="0dp"
                      android:text="CIWI CUP"
                      android:layout_weight="2"
                      android:id="@+id/tv_namat_mine"
                      android:textAppearance="@style/TextAppearance.AppCompat.Large"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_marginTop="5dp"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="0dp"
                      android:layout_weight="2"
                      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                      android:text="Bukti Transfer"
                      android:layout_height="wrap_content"/>
            <ImageView android:layout_width="0dp"
                       android:layout_weight="3"
                       android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                       android:text="Pelangiiii"
                       android:src="@drawable/aa"
                       android:id="@+id/image_bukti_tf_mine"
                       android:textColor="@android:color/black"
                       android:layout_height="75dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_marginTop="5dp"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="0dp"
                      android:layout_weight="2"
                      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                      android:text="Pendaftar"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="0dp"
                      android:layout_weight="3"
                      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                      android:text="Pelangiiii"
                      android:id="@+id/tv_pendaftar"
                      android:textColor="@android:color/black"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_marginTop="5dp"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="0dp"
                      android:layout_weight="2"
                      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                      android:text="Kategori"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="0dp"
                      android:layout_weight="3"
                      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                      android:text="Futsali"
                      android:id="@+id/tv_kategori_mine"
                      android:textColor="@android:color/black"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView android:layout_width="match_parent"
                  android:textAlignment="center"
                  android:textAppearance="@style/TextAppearance.AppCompat.Large"
                  android:textColor="@android:color/black"
                  android:text="APPROVED"
                  android:id="@+id/tv_approved"
                  android:visibility="gone"
                  android:layout_marginTop="10dp"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="match_parent"
                  android:textAlignment="center"
                  android:textAppearance="@style/TextAppearance.AppCompat.Large"
                  android:textColor="@android:color/black"
                  android:text="REJECTED"
                  android:id="@+id/tv_rejected"
                  android:visibility="gone"
                  android:layout_marginTop="10dp"
                  android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="#0c0"
                    android:textColor="#fff"
                    android:text="Approve"
                    android:id="@+id/btApproved"
                    android:layout_marginHorizontal="10dp"
                    android:layout_height="wrap_content"/>
            <Button android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Reject"
                    android:background="#c00"
                    android:textColor="#fff"
                    android:id="@+id/btRejected"
                    android:layout_marginHorizontal="10dp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>