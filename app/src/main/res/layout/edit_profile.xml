<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
            android:id="@+id/potosampuledit"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#D37E30"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:background="@drawable/round"
            android:layout_width="100dp"
            android:id="@+id/profileEdit"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/v_etname"
            android:layout_height="100dp"/>
    <View
            android:id="@+id/cokwes"
            android:layout_below="@+id/potosampuledit"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    <LinearLayout
            android:background="#D37E30"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/v_etname"
            android:layout_below="@+id/cokwes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
                android:hint="Name"
                android:id="@+id/editTextNameEdit"
                android:textColor="@android:color/black"
                android:textColorHint="#777"
                android:paddingHorizontal="20dp"
                android:layout_margin="5dp"
                android:inputType="textPersonName"
                android:background="@drawable/shape_edit_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout
            android:background="#D37E30"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/v_etphone"
            android:layout_below="@+id/v_etname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
                android:hint="Phone"
                android:id="@+id/editTextPhoneEdit"
                android:textColor="@android:color/black"
                android:textColorHint="#777"
                android:paddingHorizontal="20dp"
                android:layout_margin="5dp"
                android:inputType="phone"
                android:background="@drawable/shape_edit_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
    </LinearLayout>

    <Button
            android:id="@+id/saveProfile"
            android:layout_below="@+id/v_etphone"
            android:textColor="@android:color/black"
            android:text="SAVE"
            android:textSize="18sp"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            android:background="#fcd989"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</RelativeLayout>