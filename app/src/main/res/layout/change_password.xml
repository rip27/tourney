<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarChangePass"
            app:title="Change Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <View android:layout_width="match_parent"
          android:layout_below="@+id/toolbarChangePass"
          android:background="@android:color/black"
          android:layout_height="2dp"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_marginHorizontal="20dp"
                  android:layout_marginTop="20dp"
                  android:orientation="vertical"
                  android:padding="5dp"
                  android:id="@+id/contentLastPass"
                  android:background="#D37E30"
                  android:layout_below="@+id/toolbarChangePass"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="Last Password"
                  android:layout_marginBottom="5dp"
                  android:textColor="@android:color/white"
                  android:layout_height="wrap_content"/>
        <EditText android:layout_width="match_parent"
                  android:id="@+id/lastPass"
                  android:inputType="textPassword"
                  android:background="@drawable/shape_edit_text"
                  android:hint="Insert Your Last Password"
                  android:paddingHorizontal="20dp"
                  android:layout_height="50dp"/>
    </LinearLayout>
    <CheckBox
            android:text="Show / Hide"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/contentLastPass"
            android:id="@+id/hideShowLastPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_marginHorizontal="20dp"
                  android:layout_marginTop="20dp"
                  android:padding="5dp"
                  android:orientation="vertical"
                  android:id="@+id/contentNewPass"
                  android:background="#D37E30"
                  android:layout_below="@+id/hideShowLastPass"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="New Password"
                  android:layout_marginBottom="5dp"
                  android:textColor="@android:color/white"
                  android:layout_height="wrap_content"/>
        <EditText android:layout_width="match_parent"
                  android:id="@+id/newPass"
                  android:inputType="textPassword"
                  android:background="@drawable/shape_edit_text"
                  android:hint="Insert Your Last Password"
                  android:paddingHorizontal="20dp"
                  android:layout_height="50dp"/>
    </LinearLayout>
    <CheckBox
            android:text="Show / Hide"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/contentNewPass"
            android:id="@+id/hideShowNewPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"/>

    <Button android:layout_width="match_parent"
            android:id="@+id/buttonSavePass"
            android:layout_margin="20dp"
            android:text="Simpan"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:background="#0f0"
            android:layout_below="@+id/hideShowNewPass"
            android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:visibility="gone"
              android:id="@+id/passss"
              android:layout_height="wrap_content"/>

</RelativeLayout>