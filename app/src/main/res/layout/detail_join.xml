<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
            app:title="Bukti Approved"
            android:id="@+id/tulbarDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <View android:layout_width="match_parent"
          android:layout_height="2dp"
          android:background="@android:color/black"
          android:layout_below="@+id/tulbarDetail"
    />

    <ScrollView
            android:layout_below="@+id/tulbarDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView android:layout_width="match_parent"
                      android:layout_margin="15dp"
                      android:background="#fc0"
                      android:text="PENDING"
                      android:textAlignment="center"
                      android:padding="5dp"
                      android:id="@+id/st_pend"
                      android:textAppearance="@style/TextAppearance.AppCompat.Large"
                      android:textColor="@android:color/white"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="match_parent"
                      android:layout_margin="15dp"
                      android:background="#0c0"
                      android:text="APPROVED"
                      android:textAlignment="center"
                      android:padding="5dp"
                      android:visibility="gone"
                      android:id="@+id/st_app"
                      android:textAppearance="@style/TextAppearance.AppCompat.Large"
                      android:textColor="@android:color/white"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="match_parent"
                      android:layout_margin="20dp"
                      android:background="#c00"
                      android:text="REJECTED"
                      android:textAlignment="center"
                      android:padding="5dp"
                      android:visibility="gone"
                      android:id="@+id/st_rej"
                      android:textAppearance="@style/TextAppearance.AppCompat.Large"
                      android:textColor="@android:color/white"
                      android:layout_height="wrap_content"/>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:id="@+id/contentNama"
                          android:background="#333"
                          android:layout_marginHorizontal="20dp"
                          android:padding="5dp"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="Atas Nama"
                          android:textColor="@android:color/white"
                          android:layout_height="wrap_content"/>

                <TextView android:layout_width="match_parent"
                          android:layout_marginTop="5dp"
                          android:padding="10dp"
                          android:text="P"
                          android:id="@+id/atasNamaD"
                          android:textColor="@android:color/black"
                          android:background="@android:color/white"
                          android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_marginTop="20dp"
                          android:background="#333"
                          android:id="@+id/contentTournament"
                          android:layout_marginHorizontal="20dp"
                          android:padding="5dp"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="Nama Tournament"
                          android:textColor="@android:color/white"
                          android:layout_height="wrap_content"/>

                <TextView android:layout_width="match_parent"
                          android:layout_marginTop="5dp"
                          android:padding="10dp"
                          android:text="Ci"
                          android:id="@+id/namaTournamentD"
                          android:textColor="@android:color/black"
                          android:background="@android:color/white"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_marginTop="20dp"
                          android:background="#333"
                          android:id="@+id/contentPenyelenggara"
                          android:layout_marginHorizontal="20dp"
                          android:padding="5dp"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="Penyelenggara Tournament"
                          android:textColor="@android:color/white"
                          android:layout_height="wrap_content"/>

                <TextView android:layout_width="match_parent"
                          android:layout_marginTop="5dp"
                          android:padding="10dp"
                          android:text="Ci"
                          android:id="@+id/penyelenggaraTournamentD"
                          android:textColor="@android:color/black"
                          android:background="@android:color/white"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_marginTop="20dp"
                          android:background="#333"
                          android:id="@+id/contentPrice"
                          android:layout_marginHorizontal="20dp"
                          android:padding="5dp"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="Biaya Pendaftaran ( Rupiah )"
                          android:textColor="@android:color/white"
                          android:layout_height="wrap_content"/>

                <TextView android:layout_width="match_parent"
                          android:layout_marginTop="5dp"
                          android:padding="10dp"
                          android:text="210920901920192019201920910291029"
                          android:id="@+id/priceTournamentD"
                          android:textColor="@android:color/black"
                          android:background="@android:color/white"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="200dp"
                          android:orientation="vertical"
                          android:layout_marginTop="20dp"
                          android:background="#333"
                          android:layout_gravity="center"
                          android:id="@+id/contentbukti"
                          android:layout_marginHorizontal="20dp"
                          android:padding="5dp"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="match_parent"
                          android:textAlignment="center"
                          android:text="Bukti Transfer"
                          android:textColor="@android:color/white"
                          android:layout_height="wrap_content"/>

                <ImageView
                        android:layout_gravity="center"
                        android:layout_width="175dp"
                        android:padding="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/buktiTransferD"
                        android:src="@drawable/upbrosur"
                        android:textColor="@android:color/black"
                        android:background="@android:color/white"
                        android:layout_height="175dp"/>
            </LinearLayout>
            <ProgressBar
                    android:progressBackgroundTint="@android:color/black"
                    android:id="@+id/progressIkut"
                    android:visibility="gone"
                    android:layout_below="@+id/cTanggal"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>